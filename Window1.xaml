<Window x:Class="PdfImageChanger.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Config" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*" />
            <RowDefinition Height=".5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" Name="dataGrid1" VerticalAlignment="Top" Width="278" CanUserAddRows="True" CanUserDeleteRows="True" CanUserSortColumns="True" Grid.Row="0" Grid.Column="0">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Image URLs" IsReadOnly="False" Width="*" />
            </DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding url}" />
        </DataGrid>
        <GridSplitter ResizeDirection="Rows"/>        
        <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="1,3,0,0" Name="dataGrid2" VerticalAlignment="Top" Width="278" Grid.Row="1" />
    </Grid>
</Window>
